package ejercicio.java;
import java.util.Scanner;

public class EjercicioJava 
{  
    public static void main(String[] args) 
    {
      Scanner sc=new Scanner (System.in);
      
      String nombre;
      String apellido;
      String edad;
      String hobbie;
      String editor;
      String sistema;         

      System.out.println("Ingrese su nombre");
      nombre=sc.nextLine(); 
      System.out.println("Ingrese su apellido");
      apellido=sc.nextLine();
      System.out.println("Ingrese su edad");
      edad=sc.nextLine();
      System.out.println("Ingrese su hobbie favorito");
      hobbie=sc.nextLine();
      System.out.println("Ingrese el editor de texto que utiliza");
      editor=sc.nextLine();
      System.out.println("Ingrese su sistema operativo");
      sistema=sc.nextLine();
         
      System.out.println("Usted se llama: "+nombre+" "+apellido);
      System.out.println("Tiene: "+edad+" a√±os");
      System.out.println("Su hobbie favorito es: "+hobbie);
      System.out.println("Su editor de texto favorito es : "+editor);
      System.out.println("Su sistema operativo es : "+sistema);
 
    }
    
}
